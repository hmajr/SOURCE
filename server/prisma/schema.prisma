generator client {
  provider = "prisma-client-js"
}

// generator erd {
//   provider = "prisma-erd-generator"
// }

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Trade {
  //
  //BASIC TRADE INPUT INFO

  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  ticker     String
  entry_date DateTime
  exit_date  DateTime
  result     Float

  dayTrades DayTrade[]

  @@map("trades")
}

model Day {
  id   String   @id @default(uuid())
  date DateTime

  dayTrades DayTrade[]

  @@unique([date])
  @@map("days")
}

model DayTrade {
  id String @id @default(uuid())

  day_id   String
  trade_id String

  day   Day   @relation(fields: [day_id], references: [id])
  trade Trade @relation(fields: [trade_id], references: [id])

  @@unique([day_id, trade_id])
  @@map("day_trades")
}
